html, body
  height: 100vh
  overflow: hidden

body
    display: flex
    justify-content: center
    font-family: 'PT Serif', serif
    font-size: 14px
    line-height: 20px
    margin: 0
    color: #12290E
    background-color: rgba(242,245,226,1)

.larger
    font-size: calc(100% * 1.25)
    margin-bottom: 0
    font-weight: bold
.smaller
    font-size: calc(100% * .85)

nav
    width: 100vw
    position: fixed
    top: 0
    left: 0
    //background: rgba(32,84,126,1)
    background-color: #12290E
    .menu-items
        display: flex
        flex-direction: row
        justify-content: center
        align-items: center
        padding: 4px 8px 4px 0
        height: 48px
        img
            height: 24px
            width: auto
            padding-right: 16px
        div
            padding: 0 12px
            text-align: center
            color: rgba(242,245,226,1)
            font-weight: bold

.content-wrapper
    height: 100vh
    max-width: 650px
    overflow-y: auto
    margin-top: 48px
    .content-bg
        background: rgb(242,245,226)
        background: linear-gradient(180deg, rgba(242,245,226,1) 50%, rgba(211,217,141,1) 75%, rgba(185,194,68,1) 100%)
    .rundates
        text-align: center
    section
        padding: 8px 16px
        &.credits
            padding: 8px !important
            text-align: center
            img
                max-width: calc(100vw - 32px)
                margin: 0
    .callouts
        display: flex
        justify-content: space-around
        padding: 8px 0
        .name
            text-transform: uppercase
            font-weight: bold
            font-size: 16px

.separator
    position: relative
    display: flex
    justify-content: center
    align-items: center
    margin-bottom: 32px
    .line
        background-color: rgba(#12290E,0.25)
        height: 1px
        width: 35%
    img
        position: relative
        margin-bottom: 16px
        margin: 0 16px

.synopsis
    position: relative
    font-size: 16px
    line-height: 20px
    .text
        &:first-letter
          color: #903
          float: left
          font-size: 80px
          line-height: 40px
          margin-top: -12px
          padding-right: 4px
          margin-left: -4px
        .dropColor
            color: #903
            font-size: 24px

.silhouette
    position: relative
    img
        position: relative
        //bottom: -8px
        width: 100%
        max-width: 672px
        height: auto
.record
    background-color: #fff
    .row
        display: flex
        justify-content: stretch
        align-items: center
        border: 1px solid #12290E
    .headshot
        width: 35%
    .title
        width: 65%
        font-size: 20px
        line-height: 32px
        text-align: center
        p
            margin: 0
        .role
            text-transform: uppercase
            font-weight: bold
            font-size: 16px
            line-height: 24px
        .expander
            text-align: center
            height: 24px
            margin-top: 16px
            img
                height: 24px
                width: auto
    .bio
        border: 1px solid #12290E
        border-top: none
        padding: 8px 16px

footer
    margin-top: -5px
    margin-bottom: 48px
    padding: 16px
    background-color: #12290E
    font-family: sans-serif
    color: rgba(242,245,226,1)
    font-size: 12px
    line-height: 16px
    text-align: center
    border-top: 1px dashed rgba(242,245,226,1)
    p
        margin
    a
        color: rgba(185,194,68,1)
        &:visited
            color: rgba(185,194,68,1)

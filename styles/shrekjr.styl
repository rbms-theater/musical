html, body
  height: 100vh
  overflow: hidden

body
    display: flex
    justify-content: center
    font-family: 'PT Serif', serif
    font-size: 14px
    line-height: 20px
    margin: 0
    color: #12290E
    background-color: rgba(242,245,226,1)

.larger
    font-size: calc(100% * 1.25)
    margin-bottom: 0
    font-weight: bold
.smaller
    font-size: calc(100% * .85)

nav
    width: 100vw
    position: fixed
    top: 0
    left: 0
    z-index: 1000
    //background: rgba(32,84,126,1)
    background-color: #12290E
    .menu-items
        display: flex
        flex-direction: row
        justify-content: center
        align-items: center
        padding: 4px 8px 4px 0
        height: 48px
        img
            height: 24px
            width: auto
            padding-right: 16px
        div
            padding: 0 12px
            text-align: center
            color: rgba(242,245,226,1)
            font-weight: bold
        .active
            color: #e1e707

.content-wrapper
    height: 100vh
    overflow-y: auto
    margin-top: 48px
    max-width: 650px
    scroll-behavior: smooth
    .content-bg
        background: rgb(242,245,226)
        background: linear-gradient(180deg, rgba(242,245,226,1) 50%, rgba(211,217,141,1) 75%, rgba(185,194,68,1) 100%)
    .rundates
        text-align: center
    section
        padding: 8px 16px
        &.credits
            padding: 8px !important
            text-align: center
            img
                max-width: calc(100vw - 32px)
                margin: 0
    .callouts
        display: flex
        justify-content: space-around
        padding: 8px 0
        .name
            text-transform: uppercase
            font-weight: bold
            font-size: 16px
h2, h3, h4, .subtitle, .note
    text-align: center

h2
    color: #903
    padding-bottom: 8px
h3
    text-align: center
    text-decoration: underline
ul.music
    text-align: center
    list-style-type: none
    padding: 0
    li
        font-size: 16px
        line-height: 32px
        vertical-align: baseline
        font-style: italic
        &:before, &:after
            font-size: 24px
            position: relative
            top: 8px
            opacity: 0.6
            color: #903
        &:before
            content:'\201C'
            margin-right: 4px
        &:after
            top: 7px
            margin-left: 0px
            content: '\201D'

.intermission
    background-color: rgba(green, 0.125)
    display: inline-block
    margin: 0 auto
    padding: 4px 24px
.intermission-note
    font-weight: normal
    font-size: 12px

.separator
    position: relative
    display: flex
    justify-content: center
    align-items: center
    margin-bottom: 32px
    .line
        background-color: rgba(#12290E,0.25)
        height: 1px
        width: 35%
    img
        position: relative
        margin-bottom: 16px
        margin: 0 16px

.synopsis
    position: relative
    font-size: 16px
    line-height: 20px
    .text
        &:first-letter
          color: #903
          float: left
          font-size: 80px
          line-height: 40px
          margin-top: -12px
          padding-right: 4px
          margin-left: -4px
        .dropColor
            color: #903
            font-size: 24px
.attribution
    font-size: 12px
    font-style: italic
    opacity: 0.6
    padding: 0 24px
    line-height: 16px
    margin-top: 24px

.silhouette
    position: relative
    img
        position: relative
        //bottom: -8px
        width: 100%
        max-width: 672px
        height: auto

footer
    margin-top: -5px
    margin-bottom: 48px
    padding: 16px
    background-color: #12290E
    font-family: sans-serif
    color: rgba(242,245,226,1)
    font-size: 12px
    line-height: 16px
    text-align: center
    border-top: 1px dashed rgba(242,245,226,1)
    p
        margin
    a
        color: rgba(185,194,68,1)
        &:visited
            color: rgba(185,194,68,1)

.subsection
    margin-bottom: 24px
.subtitle
    font-weight: bold
    font-size: 16px
.note
    font-size: 12px
    margin-bottom: 8px
    font-style: italic
.people
    margin-top: 16px
    display: flex
    flex-wrap: wrap
    justify-content: space-between
    align-items: stretch
    .participant
        min-width: 117px
        max-width: 117px
        padding: 0
        margin: 4px 4px 8px 4px
        text-align: center
        background-color: rgba(#fff,0.75)
        border: 1px solid #bfdb1b
        box-shadow: 0px 0px 5px rgba(#000,0.25)
        display: flex
        flex-direction: column
        align-items: center
        img
            width: 117px
            height: 146px
            background: url('../images/placeholder.png')
        p
            margin: 0
            padding: 0 4px
    a.modalTrigger
        color: #12290E
        text-decoration: none
        position: relative
        .name
            font-weight: bold
            min-height: 40px
            padding-bottom: 8px
            align-self: center
        .role
            font-size: 12px
            //text-transform: uppercase
            color: #2f6730
            line-height: 16px
        .bio
            text-decoration: underline
            padding-bottom: 8px
            padding-top: 8px

table
    margin-top: 16px
    background-color: rgba(#fff,0.75)
    border-collapse: collapse
    td
        vertical-align: baseline
        padding: 8px
        border-bottom: 1px solid rgba(green, 0.25)
        &.role
            text-transform: uppercase
            font-size: 12px
            width: 30%
            line-height: 16px
            color: #2f6730
        &.name
            padding-left: 24px

#profileModal
    padding: 0
    .headshot, .details
        display: inline-block
        vertical-align: top
    .headshot
        margin: 4px
        img
            border-radius: 4px 0 0 0
    .details
        padding: 16px
        .name
            font-size: 20px
            font-weight: bold
        .role
            color: #2f6730
        .grade
            opacity: 0.8
            margin-bottom: 16px
    .bio
        padding: 4px 16px 16px 16px

.close-modal
    background-image: url('../images/close-icon.png') !important
